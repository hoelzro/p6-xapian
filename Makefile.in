XAPIAN_SOURCES = 		\
    xapian-document.cpp 	\
    xapian-stem.cpp 		\
    xapian-termgenerator.cpp

XAPIAN_OBJECTS = 		\
    xapian-document%O% 		\
    xapian-stem%O% 		\
    xapian-termgenerator%O%

all: %DESTDIR%/xapian-helper%SO%

%DESTDIR%/xapian-helper%SO%: $(XAPIAN_OBJECTS)
	$(CXX) %LDSHARED% %LDFLAGS% %LIBS% %LDUSR%xapian %LDOUT%%DESTDIR%/xapian-helper%SO% $(XAPIAN_OBJECTS)

%%O%: %.cpp
	$(CXX) -c %CCSHARED% %CCFLAGS% $^

clean:
	rm -rf blib
	rm *%O%
