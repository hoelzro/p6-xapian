XAPIAN_SOURCES = 		\
    xapian-database.cpp		\
    xapian-document.cpp 	\
    xapian-enquire.cpp 		\
    xapian-error.cpp 		\
    xapian-query.cpp 		\
    xapian-queryparser.cpp 	\
    xapian-stem.cpp 		\
    xapian-termgenerator.cpp	\
    xapian-writable-database.cpp

XAPIAN_OBJECTS = 		\
    xapian-database%O% 		\
    xapian-document%O% 		\
    xapian-enquire%O% 		\
    xapian-error%O% 		\
    xapian-query%O% 		\
    xapian-queryparser%O% 	\
    xapian-stem%O% 		\
    xapian-termgenerator%O%	\
    xapian-writable-database%O%

all: %DESTDIR%/xapian-helper%SO%

%DESTDIR%/xapian-helper%SO%: $(XAPIAN_OBJECTS)
	$(CXX) %LDSHARED% %LDFLAGS% %LDOUT%%DESTDIR%/xapian-helper%SO% $(XAPIAN_OBJECTS) %LIBS% %LDUSR%xapian

%%O%: %.cpp
	$(CXX) -c %CCSHARED% %CCFLAGS% $^

clean:
	rm -rf blib
	rm -f *%O%
	rm Makefile
